<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" controllerName="Project.Project.controller.CarDetail"
   xmlns:html="http://www.w3.org/1999/xhtml">
   <App>
      <pages>
         <Page title="{Value>/carName}" 
            showNavButton="true"
            navButtonPress="onNavBack">
            <content>
               <f:SimpleForm title="About {carName}">
                  <f:content>
                     <Label text="Brand"/>
                     <Text text="{Value>/Brand}" />
                     <Label text="Model"/>
                     <Text text="{Value>/Model}" />
                     <Label text="Power"/>
                     <Text text="{Value>/Power}" />
                  </f:content>
               </f:SimpleForm>
            </content>
         </Page>
      </pages>
   </App>
</mvc:View>