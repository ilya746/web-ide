<mvc:View controllerName="Project.Project.controller.Detail" 
   xmlns:mvc="sap.ui.core.mvc" 
   displayBlock="true" 
   xmlns:f="sap.f" 
   xmlns:card="sap.f.cards" 
   xmlns:mc="sap.suite.ui.microchart" 
   xmlns:layout="sap.ui.layout"
   xmlns="sap.m">
   <Shell id="shell">
      <App id="app">
         <pages>
            <Page id="page1" title="{carName}" >
               <content>
                  <Button xmlns="sap.m" text="To Home page" id="button1" press="ToMainPage"/>
                  
                  	<List id="cars" 
						items="{carAbout}"
						headerText="Car about">
					<items>
						<StandardListItem title="{productName}">
							<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
                                 <Text text="{Brand}" />
                                 <Text text="{Model}" />
                            </VBox>
                        </StandardListItem>     
					</items>
				</List>
                  
               </content>
            </Page>
         </pages>
      </App>
   </Shell>
</mvc:View>